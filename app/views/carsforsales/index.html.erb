<%= render 'welcome/header' %>

<p id="notice"><%= notice %></p>

<div class="carsforsaleUI">

  <div class="carsforsaleSearch">
    <h1><u>Cars For Sale</u></h1>

    <%= form_tag carsforsales_path, :method => 'get' do %>
      <%= text_field_tag :search, params[:search] %>
      <%= submit_tag "Search" %>
    <% end %>
  </div>

  <table class="table table-stripped">
    <thead>
    <tr>
      <th scope="col">Title</th>
      <th scope="col">Brand</th>
      <th scope="col">Year</th>
      <th scope="col">Engine</th>
      <th scope="col">Transmission</th>
      <th scope="col">Mileage</th>
      <th scope="col">Color</th>
      <th scope="col">Description</th>
      <th scope="col">Price</th>
      <th scope="col" ></th>
      <th scope="col" ></th>
      <th scope="col" ></th>
    </tr>
    </thead>

    <tbody>
    <% @carsforsales.each do |carsforsale| %>
      <tr>
        <td scope="row"><%= carsforsale.title %></td>
        <td><%= carsforsale.brand %></td>
        <td><%= carsforsale.year %></td>
        <td><%= carsforsale.engine %></td>
        <td><%= carsforsale.transmission %></td>
        <td><%= carsforsale.mileage %></td>
        <td><%= carsforsale.color %></td>
        <td><%= carsforsale.description %></td>
        <td>â‚¬<%= carsforsale.price %></td>
        <td><%= link_to 'Show', carsforsale %></td>
        <% if current_user && current_user.admin %>
          <td><%= link_to 'Edit', edit_carsforsale_path(carsforsale) %></td>
          <td><%= link_to 'Destroy', carsforsale, method: :delete, data: {confirm: 'Are you sure?'} %></td>
        <% end %>
      </tr>
    <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Carsforsale', new_carsforsale_path %>

</div>

<%= render 'welcome/footer' %>